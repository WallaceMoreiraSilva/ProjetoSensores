@model ApplicationApp.ViewModels.SensorViewModel

@{
    ViewData["Title"] = "Remover Sensor";
}

<h1>Tem certeza que deseja remover?</h1>

<p></p>

<div>
    <h4>Sensor</h4>
    <hr />
    <dl class="row">      
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomePais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomePais)
            @*@Html.DropDownListFor(m => m.PaisId, (IEnumerable<SelectListItem>)ViewBag.Paises, "- Selecione -", new { @class = "form-control" })*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeRegiao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeRegiao)
            @*@Html.DropDownListFor(m => m.RegiaoId, (IEnumerable<SelectListItem>)ViewBag.Regioes, "- Selecione -", new { @class = "form-control" })*@
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-primary" />        
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>
