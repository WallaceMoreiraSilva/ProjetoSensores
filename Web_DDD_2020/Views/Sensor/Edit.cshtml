@model SensoresAPP.ViewModels.SensorViewModel

@{
    ViewData["Title"] = "Editar Sensor";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DataCadastro" />

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomePais" class="control-label"></label>
                @Html.DropDownListFor(m => m.PaisId, (IEnumerable<SelectListItem>)ViewBag.Paises, "- Selecione -", new { @class = "form-control"})
                <span asp-validation-for="PaisId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeRegiao" class="control-label"></label>
                @Html.DropDownListFor(m => m.RegiaoId, (IEnumerable<SelectListItem>)ViewBag.Regioes, "- Selecione -", new { @class = "form-control"})
                <span asp-validation-for="RegiaoId" class="text-danger"></span>
            </div>
            <div class="form-group">               
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
